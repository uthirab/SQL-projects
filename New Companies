SELECT COMPANY.COMPANY_CODE, 
COMPANY.FOUNDER, 
COUNT(DISTINCT LEAD_MANAGER.LEAD_MANAGER_CODE), 
COUNT(DISTINCT SENIOR_MANAGER.SENIOR_MANAGER_CODE),
COUNT(DISTINCT MANAGER.MANAGER_CODE),
COUNT(DISTINCT Employee.EMPLOYEE_CODE)
from COMPANY,Lead_Manager,  Senior_Manager,  Manager, Employee 
WHERE COMPANY.COMPANY_CODE = LEAD_MANAGER.COMPANY_CODE
AND SENIOR_MANAGER.COMPANY_CODE = LEAD_MANAGER.COMPANY_CODE 
AND SENIOR_MANAGER.COMPANY_CODE = MANAGER.COMPANY_CODE
AND EMPLOYEE.COMPANY_CODE = MANAGER.COMPANY_CODE
GROUP BY COMPANY.COMPANY_CODE , COMPANY.FOUNDER
ORDER BY COMPANY.COMPANY_CODE ASC;
